<routes>
    <!-- Define different driver types with varying behavior parameters -->
    <vType id="cautious" accel="1.0" decel="4.5" sigma="0.2" length="5" minGap="2.5" maxSpeed="25" speedDev="0.1"/>
    <vType id="normal" accel="1.5" decel="4.0" sigma="0.5" length="5" minGap="2.0" maxSpeed="30" speedDev="0.1"/>
    <vType id="aggressive" accel="2.0" decel="5.0" sigma="0.9" length="5" minGap="1.0" maxSpeed="35" speedDev="0.3"/>
    
    <!-- Define flows with different vehicle densities -->
    <flow id="flow1" type="cautious" begin="0" end="3600" vehsPerHour="800" departLane="0" departSpeed="max"/>
    <flow id="flow2" type="normal" begin="0" end="3600" vehsPerHour="400" departLane="0" departSpeed="max"/>
    <flow id="flow3" type="aggressive" begin="0" end="3600" vehsPerHour="200" departLane="0" departSpeed="max"/>
</routes>
